<html>
	<head>
		<title>SWAPI - People</title>
		<link rel="stylesheet" href="/css/bootstrap.min.css" />
	</head>
	<body>
		<div class="container-fluid">

		<div class="row">
			<nav class="navbar navbar-default">
				<div class="container-fluid">
					<div class="navbar-header">
						 <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						 	<i class="glyphicon glyphicon-menu-hamburger"></i>
						 </button>
						<a class="navbar-brand" href="/">
							 <i class="glyphicon glyphicon-envelope"></i> Chatsplosion.com
						</a>
					</div>
					<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
						<ul class="nav navbar-nav">
							<li><a href="/">Home</a></li>
							<li><a href="/notes">Notes</a></li>
							<li><a href="/articles">News</a></li>
							<li><a href="/users">Users</a></li>
							<li><a href="/terms-of-service">Terms</a></li>
							<li class="active"><a href="/swapi/people">people</a></li>							
						</ul>
						<ul class="nav navbar-nav navbar-right">

							<li><a href="/tickets">Help/Support</a></li>

						</ul>
					</div>
				</div>
			</nav>
		</div>
			<div class="row">
				<div class="col-xs-12">
					<div class="panel panel-default" data-id="<%= people %>">
						<div class="panel-heading">
							<div class="panel-title">
								<a href="<%= people.url %>"><%= people.name %></a>
							</div>
						</div>
						<div class="panel-body">
							<div class="col-xs-6 col-md-3">
								Height:
							</div>				
							<div class="col-xs-6 col-md-3">
								<%= people.height %> cm
							</div>
							<div class="col-xs-6 col-md-3">
								Mass:
							</div>				
							<div class="col-xs-6 col-md-3">
								<%= people.mass %> kg
							</div>
							<div class="col-xs-6 col-md-3">
								Hair Color:
							</div>				
							<div class="col-xs-6 col-md-3">
								<%= people.hair_color %>
							</div>
							<div class="col-xs-6 col-md-3">
								Eye Color:
							</div>				
							<div class="col-xs-6 col-md-3">
								<%= people.eye_color %>
							</div>
							<div class="col-xs-6 col-md-3">
								Birth Year:
							</div>				
							<div class="col-xs-6 col-md-3">
								<%= people.birth_year %>
							</div>
							<div class="col-xs-6 col-md-3">
								Gender:
							</div>				
							<div class="col-xs-6 col-md-3">
								<%= people.gender %>
							</div>
							<div class="col-xs-6 col-md-3">
								Homeworld:
							</div>				
							<div class="col-xs-6 col-md-3">
								<a href="<%= people.homeworld %>">Click Here to View</a>
							</div>
							<div class="col-xs-6 col-md-3">
								Species:
							</div>				
							<div class="col-xs-6 col-md-3">
								<a href="<%= people.species %>">Click Here to View</a>
							</div>
							<div class="col-xs-6 col-md-3">
								Films:
							</div>
							<div class="col-xs-6 col-md-3">
								<ul class="list-group">
									<% for(eachFilm in people.films) { %>
										<li class="list-group-item"><a href="<%= people.films[eachFilm] %>"><%= people.films[eachFilm] %></a></li>
									<% } %>
								</ul>
							</div>
							<div class="col-xs-6 col-md-3">
								Vehicles:
							</div>
							<div class="col-xs-6 col-md-3">
								<ul class="list-group">
									<% for(eachVehicle in people.vehicles) { %>
										<li class="list-group-item"><a href="<%= people.vehicles[eachVehicle] %>"><%= people.vehicles[eachVehicle] %></a></li>
									<% } %>
								</ul>
							</div>
							<div class="col-xs-6 col-md-3">
								Starships:
							</div>
							<div class="col-xs-6 col-md-3">
								<ul class="list-group">
									<% for(eachStartship in people.starships) { %>
										<li class="list-group-item"><a href="<%= people.starships[eachStartship] %>"><%= people.starships[eachStartship] %></a></li>
									<% } %>
								</ul>
							</div>
							<div class="col-xs-6 col-md-3">
								Created:
							</div>				
							<div class="col-xs-6 col-md-3">
								<%= people.created %>
							</div>
								<div class="col-xs-6 col-md-3">
								Edited:
							</div>				
							<div class="col-xs-6 col-md-3">
								<%= people.edited %>
							</div>
						</div>
						<div class="panel-footer">				
							<a href="/swapi/people/">Back to List</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script><meta name="viewport" content="width=device-width, initial-scale=1">
	<script type="text/javascript">
		$(function(){

		});
	</script>
</html>
