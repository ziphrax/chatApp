<html>
	<head>
		<title>Marvel - Comics</title>
		<link rel="stylesheet" href="/css/bootstrap.min.css" />
	</head>
	<body>
		<div class="container-fluid">

		<div class="row">
			<nav class="navbar navbar-default">
				<div class="container-fluid">
					<div class="navbar-header">
						 <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						 	<i class="glyphicon glyphicon-menu-hamburger"></i>
						 </button>
						<a class="navbar-brand" href="/">
							 <i class="glyphicon glyphicon-envelope"></i> Chatsplosion.com
						</a>
					</div>
					<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
						<ul class="nav navbar-nav">
							<li><a href="/">Home</a></li>
							<li><a href="/notes">Notes</a></li>
							<li><a href="/articles">News</a></li>
							<li><a href="/users">Users</a></li>
							<li><a href="/terms-of-service">Terms</a></li>
							<li class="active"><a href="/">Comics</a></li>
							 
						</ul>
						<ul class="nav navbar-nav navbar-right">

							<li><a href="/tickets">Help/Support</a></li>

						</ul>
					</div>
				</div>
			</nav>
		</div>
			<div class="row">
				<div class="col-xs-12">
					<% for(eachComic in comics.data.results) {%>
						<div class="panel panel-default" data-id="<%= comics.data.results[eachComic].id %>">
							<div class="panel-heading">
								<div class="panel-title">
									<%= comics.data.results[eachComic].title %>
								</div>
							</div>
							<div class="panel-body">
								<div class="col-xs-9">
									<%- comics.data.results[eachComic].description %>
								</div>
								<div class="col-xs-3">
									<img src="<%- (comics.data.results[eachComic].thumbnail.path + '.' + comics.data.results[eachComic].thumbnail.extension) %>" width="256px"/>
								</div>
							</div>
							<div class="panel-footer">
								<a href="<%= comics.data.results[eachComic].urls %>" class="btn btn-primary">Buy Â£ <%= comics.data.results[eachComic].prices[0].price %></a>
							</div>
						</div>
					<% } %>
				</div>
			</div>
		</div>
	</body>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script><meta name="viewport" content="width=device-width, initial-scale=1">
