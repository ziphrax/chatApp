<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js" charset="utf-8"></script>
<script>
	var data = {};	

  	$(function(){
  		$(window).resize(respondCanvas);

  		function respondCanvas() {
  			var c = $('#logChart');
  			var ctx = document.getElementById('logChart').getContext("2d");
		    ctx.canvas.width = jQuery("#container-logchart").width();
		    ctx.canvas.height = jQuery("#container-logchart").height();		    
		    getCanvasLogs();
		}

  		respondCanvas();
  		getRawLogs();

	    function getCanvasLogs(){
	    	$.get('/data/logs/dailyhitrate/241085.0129')
	    		.done(function(logs){
	    			var parsedData = $.map(logs,function(val,i){
	    				return val.value;
	    			});
	    			var parsedLabels = $.map(logs,function(val,i){
	    				return val._id;		    				
	    			});
	    			var data = {
	    				labels: parsedLabels,
	    				datasets:[
	    					{
	    						label: "Logs",
	    						fillColor: "rgba(220,220,220,0.2)",
					            strokeColor: "rgba(220,220,220,1)",
					            pointColor: "rgba(220,220,220,1)",
					            pointStrokeColor: "#fff",
					            pointHighlightFill: "#fff",
					            pointHighlightStroke: "rgba(220,220,220,1)",
					            data: parsedData
	    					}
	    				]
	    			};

	    			var options = {
	    				scaleBeginAtZero : true,					    
					    scaleShowGridLines : true,
					    scaleGridLineColor : "rgba(0,0,0,.05)",
					    scaleGridLineWidth : 1,
					    scaleShowHorizontalLines: true,
					    scaleShowVerticalLines: true,
					    barShowStroke : true,
					    barStrokeWidth : 2,
					    barValueSpacing : 5,
					    barDatasetSpacing : 1
	    			};	    			
	    			var ctx = document.getElementById('logChart').getContext("2d");
	    			var logChart = new Chart(ctx).Line(data,options);
	    		})
	    		.fail(function(err){
	    			console.log(err);
	    		});
	    }

	    function getRawLogs(){
	    	$.get('/data/logs/raw/241085.0129')
	    		.done(function(logs){
	    			$.each(logs,function(index,item){
	    				$('#rawlogs').find('tbody').append(
	    					'<tr>'
		    					+'<td>' + item.time + '</td>'
								+'<td>' + item.method + '</td>'
								+'<td>' + item.url + '</td>'
								+'<td>' + (item.message || '') + '</td>'
								+'<td>' + item.duration + '</td>' +
	    					'</tr>'
	    				);//+'<td>' + item.ip + '</td>'
	    			});
	    		}).fail(function(err){
	    			console.log('Failed to get raw data');
	    		});
	    }
	});
</script>
</body>
</html>
